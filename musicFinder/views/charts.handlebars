 <div id="container" style = "display: flex; Justify-content: space-around;"></div>
        
      
      <script>
    
          anychart.onDocumentReady(function () {
            var data = [
              ['Watermelon Sugar', 53221],
              ['Rockstar', 49256],
              ['Whats Poppin', 43308],
              ['Blinding Lights', 35432],
              ['Roses', 33701],
              ['My Future', 24008],
              ['Savage Love', 14229],
              ['Cardigan', 13712],
              ['Go Crazy', 10419],
              ['Blueberry Faygo', 3932]
            ];
    
            // sort data by alphabet order
            data.sort(function (itemFirst, itemSecond) {
              return itemSecond[1] - itemFirst[1];
            });
    
            // create bar chart
            var chart = anychart.bar();
    
            // turn on chart animation
            chart
              .animation(true)
              .padding([10, 40, 5, 20])
              // set chart title text settings
              .title('Todays Top Songs');
    
            // create area series with passed data
            var series = chart.bar(data);
            // set tooltip formatter
            series
              .tooltip()
              .position('right')
              .anchor('left-center')
              .offsetX(5)
              .offsetY(0)
              .format('${%Value}{groupsSeparator: }');
    
            // set titles for axises
            chart.xAxis().title('Song Titles');
            chart.yAxis().title('# of downloads');
            chart.interactivity().hoverMode('by-x');
            chart.tooltip().positionMode('point');
            // set scale minimum
            chart.yScale().minimum(0);
    
            // set container id for the chart
            chart.container('container');
            // initiate chart drawing
            chart.draw();
          });
        
    </script>