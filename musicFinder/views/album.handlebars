<div class = "container">
    <div class="row">
        <div class="col">
            <div class="container album-cols">
                <h2>Albums Results</h2>
                <ul>
                {{#each albums}}
                    <li class = "li-item">

                        {{this.name}}
                    </li>
                    <button type="submit" class="btn add-btn" data-id={{this.id}}>Add {{this.name}}</button> 
                {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
